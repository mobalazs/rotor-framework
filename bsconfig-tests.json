{
	"extends": "bsconfig.json",
	"description": "The TDD mode in Rooibos is a feature that allows you to run your tests in a Test-Driven Development (TDD) style.",
	"files": [
		"source/**/*",
		"components/**/*",
		"manifest",
		"assets/**/*",
		"!source/rotor/libs/**/*.spec.bs"
	],

	"bs_const": {
		"debug": true,
		"unittest": true
	},

	"createPackage": false,
	"emitDefinitions": true,
	"sourceMap": true,
	"plugins": ["@rokucommunity/bslint", "rooibos-roku"],

	"rooibos": {
		"isRecordingCodeCoverage": true,
		"printTestTimes": true,
		"testsFilePattern": null,
		"tags": ["!integration", "!deprecated", "!fixme"],
		"showOnlyFailures": true,
		"catchCrashes": true,
		"lineWidth": 70,
		"failFast": false,
		"sendHomeOnFinish": false,

	    "projectName": "Rotor Framework",
		"collectCoverage": true,
		"coverageReportType": "lcov",

		"coverageExcludedFiles": [
			"**/*.const.bs",
			"source/Main.brs",
			"components/rooibos/CodeCoverage.brs",
			"components/MainScene.bs",
			"source/rotor/engine/constants.bs",
			"**/roku_modules/**/*",
			"source/rotor/libs/**/*",
			"source/rotor/base/baseWidget.bs"
		]
	},

	"diagnosticFilters": [
		{
			"src": "**/roku_modules/**/*.*"
		},
		{
			"src": "source/rotor/libs/**/*.spec.bs"
		},
		{
			"src": "**/source/tests/**/*"
		}
	]
}
