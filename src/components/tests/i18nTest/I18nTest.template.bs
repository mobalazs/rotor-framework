' ViewModel for testing single i18n path
class I18nSinglePathViewModel extends Rotor.ViewModel
    override function template() as object
        return {
            nodeType: "Group",
            children: {
                id: "titleLabel",
                nodeType: "Label",
                fields: {
                    text: m.viewModelState.l10n.title,
                    width: 400,
                    height: 50
                }
            }
        }
    end function
end class

