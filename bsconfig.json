{
    "rootDir": "src",
    "stagingDir": "dist",

    "bs_const": {
        "debug": false,
        "unittest": false
    },

	"createPackage": false,
	"emitDefinitions": true,
	"sourceMap": true,

	"plugins": ["@rokucommunity/bslint"],

    "files": [
        "source/**/*",
        "components/**/*",
        "!components/debug", // debug components
        "manifest",
        "assets/**/*",
        "!assets/mockups", // mockup data
        "!**/*.spec.bs" // rooibos unit tests
    ],

    "autoImportComponentScript": true,

    "diagnosticFilters": [
        {
            "src": "**/roku_modules/**/*.*"
            },{
            "src": "**/*.spec.bs"
            },{
            "src": "**/debug/rale/**/*.*"
        }
    ]
}
